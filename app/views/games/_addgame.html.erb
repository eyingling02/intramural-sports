<div id="game-form">
    <h2 class="form-group">Create Game:</h2>
    <%= form_for :game, url: league_games_path(@league) do |f| %>
    <div class="team-group">
        <div class="form-group">
            <%= f.label :home_team %>
            <%= f.select(:home_team) do %>
            <% @league.teams.each do |c| -%>
            <%= content_tag(:option, c.name, value: c.name) %>
            <% end %>
            <% end %>
        </div>
        <div class="form-group">
            <%= f.label :away_team %>
            <%= f.select(:away_team) do %>
            <% @league.teams.each do |c| -%>
            <%= content_tag(:option, c.name, value: c.name) %>
            <% end %>
            <% end %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :location%>
        <%= f.text_field :location, class: "txt-group" %>
    </div>
    <div style="width:206px;" class="form-group">
        <label for="date_time">Date And Time</label>
            <div class='input-group date' id='datetimepicker8'>
                <%= f.text_field :date_time, class: "txt-group", style: "height:auto;" %>
                <span style="height:auto;" class="input-group-addon">
                    <span class="fa fa-calendar"></span>
                </span>
            </div>
        <script type="text/javascript">
            $(function () {
                $('#datetimepicker8').datetimepicker({
                    icons: {
                        time: "fa fa-clock-o",
                        date: "fa fa-calendar",
                        up: "fa fa-arrow-up",
                        down: "fa fa-arrow-down"
                    }
                });
            });
        </script>
    </div>
    <%= f.submit "Create Game", class: "btn btn-default" %>
</div>
</div>
<% end %>
