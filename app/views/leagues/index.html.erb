<div class="container">
  <div class="jumbotron">
    <h1>Intramuralizer</h1>
    <h3>A user-friendly platform where coaches and the community can keep track of intramural sports teams.</h3>
    <div>
      <p>Coaches can create teams, set up games, send reminders through text, and report game scores.</p>
      <p>All players and community members have access to past and upcoming games, teams, and players.</p>
    </div>
  </div>
</div>

<div class='row'>
  <% @leagues.each do |league| %>
  <div class='col-md-4'>
    <%= link_to league_teams_path(league) do %>
    <%  if league.sport.capitalize == "Basketball" %>
    <%= image_tag "bb.png", width:'200' %>
    <%  elsif league.sport.capitalize == "Football" %>
    <%= image_tag "afb.png", width:'200' %>
    <%  elsif league.sport.capitalize == "Hockey" %>
    <%= image_tag "hoc.png", width:'200'%>
    <%  else %>
    <%= image_tag "spt.png", width:'300' %>
    <% end %>
    <h2><%= league.sport.capitalize %></h2>

  </div>
  <% end %>

  <% end %>

</div>

