<h2 class="form-group">Add Player to Team:</h2>
  <%= form_for :player, url: league_team_players_path(@league, @team) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "txt-group"  %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "txt-group"  %>
  </div>
  <div class="form-group">
    <%= f.label :phone %>
    <%= f.telephone_field :phone, class: "txt-group"  %>
  </div>
  <%= f.hidden_field :team, :value => @team.id %>

    <%= f.submit "Add Player" , class: "btn btn-default" %>

<% end %>
