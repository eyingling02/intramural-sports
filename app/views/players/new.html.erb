<div id="register-form">
   <div class="block-inline">
      <h1 class="form-group">Register</h1>

      <%= form_for :player, url: "/players" do |f| %>
         <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "txt-group", placeholder: "Name" %>
         </div>
         <div class="form-group">
            <%= f.label :team %>
            <%= f.text_field :team, class: "txt-group", placeholder: "Name of Team" %>
         </div>
         <div class="form-group">
            <%= f.label :sport %>
            <%= f.text_field :sport, class: "txt-group", placeholder: "Football, Basketball, or Hockey" %>
         </div>
         <% if flash[:notice] %>
          <div style="color:red;" class="notice"><%= flash[:notice] %></div>
        <% end %>
         <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: "txt-group", placeholder: "Email"%>
         </div>
         <div class="form-group">
            <%= f.label :phone %>
            <%= f.telephone_field :phone, class: "txt-group", placeholder: "Phone Number" %>
         </div>
         <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: "txt-group", placeholder: "Password"%>
         </div>
         <div class="form-group">
            <%= f.label :password_confirmation, "Password Confirmation"%>
            <%= f.password_field :password_confirmation, class: "txt-group", placeholder: "Password Confirmation" %>
         </div>
         <%= f.hidden_field :coach, :value => true %>
         <div class="form-group">
            <%= f.submit "Register", class: "btn btn-default" %>
         </div>
      <% end %>
   </div>
   <div class="jumbo-inline">
     <%= render partial:"leagues/intramuralizer" %>
   </div>
</div>
