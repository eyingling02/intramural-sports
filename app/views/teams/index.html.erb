

<h1><%= @league.sport.capitalize %></h1>
<table class="table">
    <thead>
        <tr>
            <th>  Team Name </th>
            <th>Number of Player</th>
            <th>Results of Last 5 games</th>
        </tr>
    </thead>
    <tbody>
<% @teams.each do |team| %>
  <tr>
    <td><%= link_to league_team_path(@league, team) do %><%= team.name %><% end %></td>
    <td><%= team.players.count %></td>
    <td><% @games = Game.where("home_id=#{team.id}").or(Game.where("away_id=#{team.id}")).limit(5) %>
      <% @games.each do |game| %>
        <%if game.home_id == team.id && game.home_score > game.away_score %>
        <%= p "W" %>
        <% elsif game.home_id == team.id && game.home_score < game.away_score %>
        <%= p "L" %>
        <% elsif game.away_id == team.id && game.away_score > game.home_score %>
        <%= p "W" %>
        <% else %>
        <%= p "L" %>
        <% end %>
        <% end %></td>
  </tr>
<% p team %>
<!-- <p><%= link_to 'Team details', league_team_path(@league, team) %></p> -->
<% end %>
